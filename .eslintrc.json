{
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:prettier/recommended"    
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": "./dist/**/*.*",
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true, "endOfLine": "auto" }]
    }
}
